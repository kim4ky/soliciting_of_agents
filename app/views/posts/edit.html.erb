<%= render "shared/header" %>

<%= form_with model: @post, class: 'form-main', local: true do |f| %>
<div class='post-form'>
  <div class='form-header'>
    <h2 class='form-header-text'>投稿内容の編集</h2>
  </div>
  <%= render "shared/error_messages", model: f.object %>

  <div class="game-mode">
    <div class='form-text-wrap'>
      <label class="form-text">ゲームモード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.collection_select(:game_mode_id, GameMode.all, :id, :name, {}, {class:"select-box"}) %>
  </div>

  <div class="content-form">
    <div class='form-text-wrap'>
      <label class="form-text">投稿内容</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :content, class:"content-text", placeholder:"募集内容の詳細を記入してください （500文字まで）", maxlength:"500" %>
  </div>

  <div class="post">
    <%= f.submit "変更する",class:"post-btn", id:"button" %>
    <%=link_to 'もどる', post_path, class:"back-btn", id:"button" %>
  </div>
</div>
<% end %>