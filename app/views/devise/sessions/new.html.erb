<%= render "shared/header" %>

<%= form_with model: @user, url: user_session_path, class: 'form-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h2 class='form-header-text'>ログイン</h2>
  </div>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default" %>
  </div>

  <div class="session">
    <%= f.submit "ログイン",class:"session-btn", id:"button" %>
  </div>
</div>
<% end %>

<div class='form-bottom'>
  アカウントをお持ちでない方はこちらから<%= link_to '新規登録',"/users/sign_up" %>してください
</div>
